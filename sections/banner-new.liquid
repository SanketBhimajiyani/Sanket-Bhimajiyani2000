<div class="home_banner_inner">
    <div class="container_fluid">
        <div class="banner_img">
            {% if section.settings.desktop_image != blank %}
                <div class="desktop_img">
                  <img src="{{ section.settings.desktop_image | img_url: 'large' }}" width="1440" height="780" alt="{{ section.settings.desktop_image }}">
                </div>
              {% else %}
              <img class="desktop_img" src="https://cdn.shopify.com/s/files/1/0703/6718/3064/files/Group_1000007949_1.jpg?v=1720201963" width="1440" height="780">
              {% endif %}              
        {% if section.settings.mobile_image != blank %}
        <div class="mobile_img">
            <img src="{{ section.settings.mobile_image | img_url: 'large' }}" width="686" height="264" alt="{{ section.settings.mobile_image }}">
            </div>
            {% else %}
            <img class="mobile_img" src="https://cdn.shopify.com/s/files/1/0703/6718/3064/files/Frame.jpg?v=1720203342" width="686" height="264">
        {% endif %}
        </div>
        <div class="banner-content">
            <div class="banner-info">
                {% if section.settings.title != blank %}
                <div class="sec_title">
                <h1>{{ section.settings.title }}</h1>
                </div>
            {% endif %}
            {%  if section.settings.description != blank %}
                <div class="description">
                <p>{{ section.settings.description }}</p>
                </div>
            {% endif %}
            {% if section.settings.mobile_description != blank %}
            <div class="mobile_description">
            <p>{{ section.settings.mobile_description }}</p>
            </div>
        {% endif %}
            </div>
        {% if section.settings.button_text != blank %}
            <div class="banner-btn">
            <a class="btn black-btn" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
            </div>
        {%  endif %}
        </div>
    </div>
</div>
<div class="banner-announcement-bar">
    <div class="desktop-announce">
        <p>{{ section.settings.banner_announce }}</p>
    </div>
    <div class="mobile-announce">
        <p>{{ section.settings.mobile_announce }}</p>
    </div>
</div>

