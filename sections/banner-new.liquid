      "id": "title",
      "default": "Title"
    },
    {
      "type": "text",
      "label": "Desktop Description",
      "id": "description",
      "default": "Description"
    },
    {
        "type": "text",
        "label": "Mobile Description",
        "id": "mobile_description",
        "default": "Description"
      },
    {
      "type": "url",
      "label": "Button URL",
      "id": "button_url"
    },
    {
      "type": "text",
      "label": "Button Text",
      "id": "button_text"
    },
    {
        "type": "text",
        "label": "Desktop Banner Announcement",
        "id": "banner_announce",
        "default": "Description"
      },
      {
        "type": "text",
        "label": "Mobile banner Announcement",
        "id": "mobile_announce",
        "default": "Description"
      },
  ],
  "blocks": [],
